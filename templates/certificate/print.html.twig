{% extends 'layout.html.twig' %}

{% trans_default_domain 'student' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Student's infos {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1 class="page-title">
            prepare the student's certificate for printing ....
        </h1>
    </div>
{% endblock %}

{% block content %}
    <div class="row col-12">

        <div class="card">
            {{ form_start(form) }}
            <!-- Card Header -->
            <div class="card-header">
                <h3 class="card-title">Certificate preview</h3>
                <div class="card-options">
                    <a href="#" class="btn btn-sm btn-gray-dark mr-2"><i class="fe fe-pocket"></i> bulk</a>
                </div>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="">{{ 'Name' | trans }}</label>
                            <div class="alert alert-info">{{ student.firstName ~ ' ' ~ student.lastName }}</div>
                        </div>
                        <div class="form-group">
                            <label class="">{{ 'Birth date' | trans }}</label>
                            <div class="alert alert-info">{{ student.birthDate | date('d/m/Y') }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="">{{ 'Cne' | trans }}</label>
                            <div class="alert alert-info">{{ student.cne }}</div>
                        </div>
                        <div class="form-group">
                            <label class="">{{ 'Birth place' | trans }}</label>
                            <div class="alert alert-info">{{ student.birthPlace }}</div>
                        </div>
                    </div>
            </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.comments) }}
                    </div>
                </div>
            </div>

            <!-- Card Footer -->
            <div class="card-footer">
                <div class="d-flex">
                    <a href="{{ path('student_show', {'id': student.id}) }}" class="btn btn-link">Cancel</a>
                    <button type="submit" class="btn btn-primary ml-auto"><i class="fe fe-printer"></i> {{'print'|trans({},'actions')}}</button>
                </div>

            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
